{
  "name": "mkabs",
  "version": "1.1.0",
  "description": "Make relative links absolute",
  "author": "muji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkdoc/mkabs.git"
  },
  "bugs": {
    "url": "https://github.com/mkdoc/mkabs/issues"
  },
  "keywords": [
    "markdown",
    "commonmark",
    "ast",
    "transform",
    "stream",
    "relative",
    "link",
    "absolute"
  ],
  "dependencies": {
    "mkast": "~1.1.0",
    "through3": "~1.1.5"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "coveralls": "~2.11.8",
    "istanbul": "~0.4.2",
    "mocha": "~2.4.5"
  },
  "scripts": {
    "lint": "jshint . && jscs .",
    "clean": "rm -rf coverage",
    "docs": "npm run readme",
    "readme": "mkcat doc/readme.md | mkpi | mkgen | mkref | mkabs | mkout > README.md",
    "pretest": "rm -rf target && mkdir target",
    "test": "NODE_ENV=test mocha ${SPEC:-test/spec}",
    "precover": "npm run pretest",
    "cover": "NODE_ENV=test istanbul cover _mocha -- ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  }
}
